<import src="/templates/header.wxml"/>
<view class="container">
    <view class="page">
        <view class="page__hd">
            <template is="header" data="{{title: 'User Center', description: 'Change password'}}"/>
        </view>
        <view class="page__bd">
            <form action="" onsubmit="loginHandle">
                <view>
                    <view>
                        旧密码：
                        <input data-name="old_password" bindinput="bindField" value="{{form.old_password}}"></input>
                    </view>
                    <view>
                        新密码：
                        <input data-name="password" bindinput="bindField" value="{{form.password}}"></input>
                    </view>
                    <view>
                        确认密码：
                        <input data-name="confirm_password" bindinput="bindField" value="{{form.confirm_password}}"></input>
                    </view>
                </view>
                <view>
                    <button class="weui-btn" type="primary" bindtap="changePasswordHandle">确定</button>
                </view>
            </form>


        </view>
        <view class="page__ft">
            <tabbar-widget></tabbar-widget>
        </view>
    </view>
</view>