<import src="/templates/header.wxml"/>
<view class="container">
    <view class="page">
        <view class="page__hd">
            <template is="header" data="{{title: 'News', description: '资讯列表'}}"/>
        </view>
        <view class="page__bd">
            <view class="news-items">
                <view wx:for="{{items}}" wx:key="id" class="item">
                    <navigator url="/pages/news-detail/index?id={{item.id}}" class="title">
                        {{item.title}}
                    </navigator>
                    <view class="description">{{item.description}}</view>
                </view>
            </view>
        </view>
        <view class="page__ft">
            <tabbar-widget></tabbar-widget>
        </view>
    </view>
</view>